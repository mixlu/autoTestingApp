<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:background">#CCCCCC</item>
        <item name="colorControlHighlight">@color/primary_dark</item> 
        <item name="colorAccent">@color/primary_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <!--<item name="colorAccent">@color/accent</item>-->

        <!--TODO: add selectableItemBackground-->
        <!--TODO: can add android:selectableItemBackground-->
    </style>

    <style name="InspectionTabTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="AppTheme_Dark_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#CCCCCC</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
